<% title "Login" %>

<% semantic_form_for @staff_session do |form| %>
  <%= form.error_messages %>
  <% form.inputs :name => nil do %>
    <%= form.input :username %>
    <%= form.input :password, :as => :password %>
  <% end %>
  <% form.actions do %>
    <%= form.action :submit, :button_html => { :value => 'Login' } %> or
      <%= link_to 'reset password', new_password_reset_path %>
  <% end %>
<% end %>
