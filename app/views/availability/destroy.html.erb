<% title "Are you sure you want to delete this availability?" %>

<% semantic_form_for(@availability, :url => availability_form_url, :html => { :method => :delete }) do |form| %>
  <%= form.semantic_errors %>
  <% form.actions do %>
    <%= form.action :submit, :button_html => { :value => "Yes, I'm sure." } %>
  <% end %>
<% end %>
